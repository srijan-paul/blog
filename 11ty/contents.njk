---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
layout: content_list.njk
---

<h3 class="post-title" style="font-size: 22px">Posts tagged "{{ tag }}":</h3>

<div class="post-list">
  <ul>
    {% set taglist = collections[tag] %}
    {% for post in taglist | reverse %}
      <li>
        <a href="../../{{ post.url }}">{{ post.data.title }}
        </a>
        <span class="post-date">{{ post.date | formatDate }}
        </span>
      </li>
    {% endfor %}
  </ul>
</div>