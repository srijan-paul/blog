<!doctype html>
<html class="no-js">
  <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{{ title }}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../css/post.css">
    <link rel="stylesheet" href="../css/skeleton.css">
    <link rel="stylesheet" href="../css/prism-theme.css">
    <script type="text/javascript" src="../js/theme_switch.js" async defer></script>
    <script>console.log("inline JS")</script>
  </head>
  <body>
    {% set previousPost = collections.Post | getPreviousCollectionItem(page) %}
    {% set nextPost = collections.Post | getNextCollectionItem(page) %}
    <section class="main">

      <div class="content-wrapper">
        <div class="navbar">
          <div class="nav-item">
            <a href="/_site/home/index.html" id="logo">{{ metadata.blogName }}</a>
          </div>
          {# theme switcher button #}
          <div class="nav-item">
            <label class="switch">
              <input type="checkbox" id="theme-switcher-button">
              <span class="slider round"></span>
            </label>
          </div>
        </div>

        {# blog title #}
        <h1 class="post-title">{{ title }}</h1>
        <div class="info">{{page.date | formatDate}}</div>
        {# tags #}
        <div class="tags">
          {% for tag in tags %}
            <a class="tag" href="#">
              {{ tag }}
            </a>
          {% endfor %}
        </div>
        <hr>

        {# blog contents #}
        <article class="post">{{ content | safe }}</article>
        <hr>
        {# navigating to previous and next post #}
        <div class="nav">
          {% if previousPost %}
            <a class="prev" href="/_site{{previousPost.url}}index.html">&lt; {{ previousPost.data.title }}</a>
          {% endif %}

          {% if nextPost %}
            <a class="next" href="/_site{{nextPost.url}}index.html ">{{ nextPost.data.title }} &gt;</a>
          {% endif %}
        </div>
      </div>
      {# Javascript for theme switching, light/dark mode. #}
    </section>

  </body>
</html>